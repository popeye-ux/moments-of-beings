---
interface Props {
  imageSrc: string;
  imageAlt?: string;
  caption?: string;
}

const { imageSrc, imageAlt = '', caption = '停格在時光的縫隙中' } = Astro.props;
---

<section class="featured">
  <div class="featured-image-wrap">
    <img src={imageSrc} alt={imageAlt} class="featured-image" fetchpriority="high" />
  </div>
  {caption && <p class="featured-caption">{caption}</p>}
</section>

<style>
  .featured {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem 2rem;
  }

  .featured-image-wrap {
    width: 100%;
    max-width: 1280px;
    aspect-ratio: 1280 / 540;
    overflow: hidden;
    background: var(--color-border);
  }

  .featured-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .featured-caption {
    font-family: var(--font-family-sans);
    font-size: var(--font-size-base);
    line-height: var(--font-leading-6);
    color: var(--color-text);
    text-align: center;
    margin: 48px 0 0;
    letter-spacing: 16px;
  }

  @media (max-width: 768px) {
    .featured {
      padding: 0 1rem 1.5rem;
    }
  }
</style>
